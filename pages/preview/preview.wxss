.preview-wrap{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.preview-content{
    flex: 1;
    position: relative;
    background: #fff;
}
.preview-content button{
    position: absolute;
    top: 10px;
    right: 10px;
}
.slide-item{
   display: flex;
   justify-content: center;
   align-items: center;
}
.pages{
    position: absolute;
    bottom: 10rpx;
    text-align: center;
    padding:15rpx 25rpx;
    background:rgba(0,0,0,.2);
    color:#fff;
    border-radius: 8rpx;
    left: 50%;
    transform: translate(-50%, 0)
}
.id-container{
    display: flex;
    justify-content: center;
    align-items: center;
}
.mini-id-container{
    display: flex;
    flex-wrap: wrap;
    width: 660rpx;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2)
}
.mini-id-img{
    width: 155rpx;
    height: 217rpx;
    margin:5rpx;
}
.big-id-container{
    display: flex;
    flex-wrap: wrap;
    width: 660rpx;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2)
}
.big-id-img{
    width: 210rpx;
    height: 305.45rpx;
    margin:5rpx;
}
.id-img-tools{
    border-top:1rpx solid #eee;
    display: flex;
    justify-content: space-between;
    padding: 10rpx 10px;
}
.id-img-tools .title{
    line-height: 32px;
}
.id-img-tools button{
    margin-left: 20rpx;
}