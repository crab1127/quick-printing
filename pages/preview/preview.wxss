.preview-wrap{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.preview-content{
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    background: #eee;
}
.preview-content button{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}
.slide-item{
    display: flex;
    justify-content: center;
    align-items: center;
}
.pages{
    display: flex;
    justify-content: center;
    align-items: center;
    padding:30rpx;
}