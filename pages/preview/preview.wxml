<view class="preview-wrap">
  <view class="preview-content">
    <template is="{{ templateType }}" data="{{ current, imgUrls, width, height }}" />
    <block wx:if="{{ type.id !== 2 }}">
      <button type="primary" size="mini" bindtap="onEdit"> 编辑 </button>
    </block>
    <view wx:if="{{ templateType === 'a4-template' }}" class="pages">{{ current+1 }}/{{ imgUrls.length }}</view>
  </view>
  <block wx:if="{{ type.id === 5 }}">
    <view class="id-img-tools">
      <view class="title">
        照片尺寸
      </view>
      <view>
        <button bindtap="onIdChange" size="mini" data-type="mini" type="{{idSize === 'mini' ? 'primary' : 'default' }}">
          小寸
         </button>
        <button bindtap="onIdChange" size="mini" data-type="big" type="{{idSize === 'big' ? 'primary' : 'default' }}">
          大寸
         </button>
      </view>
    </view>
  </block>
  <view class="button-wrap">
    <button type="primary" bindtap="onPrint"> 获取打印码 </button>
  </view>
</view>

<!--4R A4-->
<template name="a4-template">
  <swiper current="{{current}}" circular="true" bindchange="onSlideChange" style="flex:1;width:100%;">
      <swiper-item wx:for="{{imgUrls}}" class="slide-item">
        <image 
          mode="aspectFit" 
          src="{{ item.url }}" 
          class="slide-item-img"
          style="width: {{width}}px; height:{{height}}px" 
          />
      </swiper-item>
  </swiper>
</template>

<!-- 证件照 小号 -->
<template name="mini-id-template">
  <view class="mini-id-container">
    <image
      wx:for="{{16}}"
      mode="aspectFit" 
      src="{{ imgUrls[0].url }}" 
      class="mini-id-img" 
    />
  </view>
</template>

<!-- 证件照 大号 -->
<template name="big-id-template">
  <view class="big-id-container">
    <image
      wx:for="{{9}}"
      mode="aspectFit" 
      src="{{ imgUrls[0].url }}" 
      class="big-id-img" 
    />
  </view>
</template>